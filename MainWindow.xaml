                        <ToolTip>
                            <Image Source="image/том ям.jpg" Width="400" Height="400"/>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </StackPanel>
        </GroupBox>
        
        <GroupBox Header="" Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock x:Name="PB1c" Text="180"/>
